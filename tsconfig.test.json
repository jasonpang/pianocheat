{
  "compilerOptions": {
    "target": "ES2019",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "outDir": "build",
    "sourceMap": true,
    "inlineSources": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "app", "dist", "main"]
}
